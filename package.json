{
  "name": "kevast.js",
  "version": "0.0.1",
  "description": "Kevast for browser and Node.js. One key-value interface, all kinds of storages.",
  "main": "dist/node/index.js",
  "scripts": {
    "clean": "rm -rf ./dist/*",
    "postbuild": "npm run clean",
    "build": "npm run clean && tsc && webpack",
    "build:nodejs": "tsc",
    "build:browser": "webpack",
    "lint": "tslint -p tsconfig.json",
    "test": "npm run test:ts && npm run test:js",
    "test:ts": "mocha --require espower-typescript/guess \"test/**/*.ts\"",
    "test:js": "mocha --require intelli-espower-loader \"test/**/*.js\"",
    "pretest:js": "tsc -t es6 --strict -m commonjs --noImplicitAny test/util/AStorage.ts test/util/SStorage.ts src/index.ts --outDir test/js/temp",
    "posttest:js": "rm -rf test/js/temp"
  },
  "files": [
    "dist/**/*"
  ],
  "repository": "git@github.com:kevast/kevast.js.git",
  "author": "Andie <zchangan@163.com>",
  "license": "MIT",
  "private": false,
  "devDependencies": {
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.12",
    "espower-typescript": "^9.0.1",
    "intelli-espower-loader": "^1.0.1",
    "mocha": "^5.2.0",
    "power-assert": "^1.6.1",
    "ts-loader": "^5.3.1",
    "tslint": "^5.11.0",
    "typescript": "^3.2.1",
    "webpack": "^4.26.1",
    "webpack-cli": "^3.1.2"
  }
}
